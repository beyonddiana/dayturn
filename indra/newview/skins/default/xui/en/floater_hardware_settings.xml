<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
 legacy_header_height="18"
 height="254"
 layout="topleft"
 name="Hardware Settings Floater"
 help_topic="hardware_settings_floater"
 title="GRAPHICS HARDWARE SETTINGS"
 width="522">
    <text
     type="string"
     length="1"
     follows="left|top"
     height="12"
     layout="topleft"
     left="10"
     name="Filtering:"
     text_readonly_color="LabelDisabledColor"
     top="34"
     width="130">
        Anisotropic filtering:
    </text>
    <combo_box
     name="ani"
     control_name="RenderAnisotropicSamples"
     label="Anisotropic filtering"
     layout="topleft"
     height="22"
     width="130"
     top_delta="-4"
     left_pad="10"
     initial_value="0">
        <combo_box.item
         label="Disabled"
         name="ANIDisabled"
         value="0" />
        <combo_box.item
         label="2x"
         name="2x"
         value="2" />
        <combo_box.item
         label="4x"
         name="4x"
         value="4" />
        <combo_box.item
         label="8x"
         name="8x"
         value="8" />
        <combo_box.item
         label="16x"
         name="16x"
         value="16" />
    </combo_box>
    <text
     name="ani note"
     layout="topleft"
     follows="left|top"
     type="string"
     length="1"
     height="12"
     width="130"
     top_delta="4"
     left_pad="10"
     text_readonly_color="LabelDisabledColor">
        (Slower when enabled)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="12"
     layout="topleft"
     left="10"
     name="antialiasing label"
     text_readonly_color="LabelDisabledColor"
     top_pad="15"
     width="130">
        Antialiasing:
    </text>
    <combo_box
     control_name="RenderFSAASamples"
     height="22"
     initial_value="false"
     label="Antialiasing"
     layout="topleft"
     left_pad="10"
     name="fsaa"
     top_delta="-4"
     width="130">
        <combo_box.item
         label="Disabled"
         name="FSAADisabled"
         value="0" />
        <combo_box.item
         label="2x"
         name="2x"
         value="2" />
        <combo_box.item
         label="4x"
         name="4x"
         value="4" />
        <combo_box.item
         label="8x"
         name="8x"
         value="8" />
        <combo_box.item
         label="16x"
         name="16x"
         value="16" />
    </combo_box>
   <text
     type="string"
     length="1"
     follows="left|top"
     height="12"
     layout="topleft"
     left_pad="10"
     name="antialiasing restart"
     text_readonly_color="LabelDisabledColor"
     top_delta="4"
     width="230">
      (Requires restart)
    </text>
    <text
     type="string"
     length="1"
     follows="left|top"
     height="16"
     layout="topleft"
     left="10"
     name="vbo_label"
     text_readonly_color="LabelDisabledColor"
     top_pad="15"
     width="130">
        Vertex buffer objects:
    </text>
    <check_box
     control_name="RenderVBOEnable"
     height="16"
     initial_value="true"
     label="Enable OpenGL vertex buffer objects"
     layout="topleft"
     left_pad="10"
     name="vbo"
     tool_tip="Enabling this on modern hardware gives a performance gain.  However, older hardware often has a poor VBO implementation and you may get crashes when this is enabled"
     width="315" />
  <text
    type="string"
    length="1"
    follows="left|top"
    height="16"
    layout="topleft"
    left="10"
    name="streamed_vbo_label"
    text_readonly_color="LabelDisabledColor"
    top_pad="5"
    width="130">
    VBO stream buffers:
  </text>
    <check_box
     control_name="RenderUseStreamVBO"
     height="16"
     initial_value="true"
     label="Use vertex buffer objects for stream buffers"
     layout="topleft"
     left_pad="10"
     name="streamed_vbo"
     tool_tip="Disabling this may improve performance when VBOs are enabled"
     width="315" />
  <text
    type="string"
    length="1"
    follows="left|top"
    height="16"
    layout="topleft"
    left="10"
    name="tc label"
    text_readonly_color="LabelDisabledColor"
    top_pad="5"
    width="130">
    Texture compression:
  </text>
    <check_box
     control_name="RenderCompressTextures"
     height="16"
     initial_value="true"
     label="Enable texture compression  (Requires restart)"
     layout="topleft"
     left_pad="10"
     name="texture compression"
     tool_tip="Compresses textures in video memory isomh S3TC, allowing for higher resolution textures to be loaded at the cost of some color quality"
     width="315" />
    <slider
     control_name="TextureMemory"
     decimal_digits="0"
     follows="left|top"
     height="20"
     increment="16"
     initial_value="32"
     label="Texture memory (MB):"
     label_width="130"
     layout="topleft"
     left="10"
     max_val="4096"
     name="GraphicsCardTextureMemory"
     tool_tip="Amount of memory to allocate for textures. Defaults to video card memory. Reducing this may improve performance but may also make textures blurry"
     top_pad="5"
     width="512" />
    <spinner
     name="gamma"
     label="Gamma:"
     control_name="RenderGamma"
     layout="topleft"
     follows="left|top"
     top_pad="5"
     left="10"
     height="16"
     width="200"
     label_width="138"
     decimal_digits="2"
     initial_value="1"
     increment="0.01"
     max_val="2" />
    <text
     name="gamma_note"
     type="string"
     length="1"
     layout="topleft"
     follows="left|top"
     top_delta="4"
     left_pad="10"
     height="12"
     width="385"
     text_readonly_color="LabelDisabledColor">
        (0 = Default brightness.  Lower = brighter)
    </text>
    <spinner
     name="fog"
     label="Fog distance ratio:"
     control_name="RenderFogRatio"
     layout="topleft"
     follows="left|top"
     top_pad="10"
     left="10"
     height="22"
     width="200"
     label_width="138"
     decimal_digits="1"
     initial_value="4"
     max_val="10"
     min_val="0.5" />
    <button
     follows="right|bottom"
     height="22"
     label="OK"
     label_selected="OK"
     layout="topleft"
     left="-102"
     name="OK"
     top="-32"
     width="90" />
</floater>
